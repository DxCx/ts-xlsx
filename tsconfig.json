{
	"compilerOptions": {
		"experimentalDecorators": true,
		"module": "commonjs",
		"target": "es6",
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"sourceMap": false,
		"declaration": true,
		"outDir": "./lib",
		"rootDir": "./modules",
		"removeComments": false
	},
	"files": [
		"modules/index.ts",
		"modules/main.ts",
		"typings/index.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}
