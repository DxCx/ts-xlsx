{
	"compilerOptions": {
		"experimentalDecorators": true,
		"module": "commonjs",
		"target": "es6",
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"declaration": false,
		"outDir": "./build",
		"rootDir": "./test",
		"removeComments": false
	},
	"files": [
		"test/test.ts",
		"lib/main.d.ts",
		"typings/index.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}
